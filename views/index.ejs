    <a href="http://localhost:8080/blogs/new"><li class="btn">New blog</li></a>

        </ul>
    </nav>
    </header>
    <div class="container">
        <% for( post of posts ) { %>
               <div class="post">
                     
                    
                     <h3 class="topic"><%= post.topic %></h3>
                     <img src="<%= post.img %>" alt="img"> <br>
                    <div class="username"> <p class="username">&#9997;@<%= post.username %></p>
                        <a href="http://localhost:8080/blogs/<%= post.id%>"><button>View Post</button></a>
                        <a href="http://localhost:8080/blogs/comments/<%=post.id %>"><button>Add Comments</button></a>
                    </div>
                    <br>
                     <p class="content"><%= post.content %></p>

               </div>
        <% } %>
        
    </div>
<div class="button">

</div></body>
</html>